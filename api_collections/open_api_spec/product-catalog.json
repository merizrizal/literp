{
  "openapi": "3.0.3",
  "info": {
    "title": "Literp Product Catalog API",
    "description": "Product Catalog CRUD API for managing products, variants, and units of measure.\n\nThis API provides endpoints to manage:\n- **Products**: Core product entities with SKU, pricing, and type (STOCK/SERVICE)\n- **Product Variants**: Size, color, or other variant combinations of products\n- **Units of Measure**: Standard unit codes (EA, KG, LTR, etc.)\n\nThe product catalog is the foundation of the Literp lightweight ERP system.",
    "version": "1.0.0",
    "contact": {
      "name": "Literp Development",
      "url": "https://github.com/merizrizal"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8010/api/v1",
      "description": "Local development server"
    },
    {
      "url": "https://api.literp.example.com/api/v1",
      "description": "Production server"
    }
  ],
  "paths": {
    "/uom": {
      "get": {
        "tags": ["Unit of Measure"],
        "summary": "List all units of measure",
        "description": "Retrieve a paginated list of all available units of measure.",
        "operationId": "listUnitOfMeasures",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Page number (starting from 0)",
            "schema": {
              "type": "integer",
              "default": 0,
              "minimum": 0
            }
          },
          {
            "name": "size",
            "in": "query",
            "description": "Number of items per page",
            "schema": {
              "type": "integer",
              "default": 20,
              "minimum": 1,
              "maximum": 100
            }
          },
          {
            "name": "sort",
            "in": "query",
            "description": "Sort field and order (e.g., \"code,asc\" or \"name,desc\")",
            "schema": {
              "type": "string",
              "default": "code,asc"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of units of measure retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/UnitOfMeasure"
                      }
                    },
                    "pagination": {
                      "$ref": "#/components/schemas/PaginationInfo"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      },
      "post": {
        "tags": ["Unit of Measure"],
        "summary": "Create a new unit of measure",
        "description": "Create a new unit of measure (e.g., EA for Each, KG for Kilogram).",
        "operationId": "createUnitOfMeasure",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUnitOfMeasureRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Unit of measure created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "$ref": "#/components/schemas/UnitOfMeasure"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "409": {
            "description": "Conflict - UOM code already exists",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/uom/{uomId}": {
      "get": {
        "tags": ["Unit of Measure"],
        "summary": "Get unit of measure details",
        "description": "Retrieve details for a specific unit of measure by ID.",
        "operationId": "getUnitOfMeasure",
        "parameters": [
          {
            "name": "uomId",
            "in": "path",
            "required": true,
            "description": "Unit of Measure ID",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Unit of measure retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "$ref": "#/components/schemas/UnitOfMeasure"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      },
      "put": {
        "tags": ["Unit of Measure"],
        "summary": "Update unit of measure",
        "description": "Update an existing unit of measure. Note that the code is immutable.",
        "operationId": "updateUnitOfMeasure",
        "parameters": [
          {
            "name": "uomId",
            "in": "path",
            "required": true,
            "description": "Unit of Measure ID",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateUnitOfMeasureRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Unit of measure updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "$ref": "#/components/schemas/UnitOfMeasure"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      },
      "delete": {
        "tags": ["Unit of Measure"],
        "summary": "Delete unit of measure",
        "description": "Delete a unit of measure. Only remove if not referenced by products.",
        "operationId": "deleteUnitOfMeasure",
        "parameters": [
          {
            "name": "uomId",
            "in": "path",
            "required": true,
            "description": "Unit of Measure ID",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Unit of measure deleted successfully"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "409": {
            "description": "Conflict - UOM is referenced by products",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/products": {
      "get": {
        "tags": ["Product"],
        "summary": "List all products",
        "description": "Retrieve a paginated list of all products with optional filtering.",
        "operationId": "listProducts",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Page number (starting from 0)",
            "schema": {
              "type": "integer",
              "default": 0,
              "minimum": 0
            }
          },
          {
            "name": "size",
            "in": "query",
            "description": "Number of items per page",
            "schema": {
              "type": "integer",
              "default": 20,
              "minimum": 1,
              "maximum": 100
            }
          },
          {
            "name": "sort",
            "in": "query",
            "description": "Sort field and order (e.g., \"sku,asc\" or \"name,desc\")",
            "schema": {
              "type": "string",
              "default": "sku,asc"
            }
          },
          {
            "name": "sku",
            "in": "query",
            "description": "Filter by SKU (wildcard search)",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "productType",
            "in": "query",
            "description": "Filter by product type",
            "schema": {
              "type": "string",
              "enum": ["STOCK", "SERVICE"]
            }
          },
          {
            "name": "activeOnly",
            "in": "query",
            "description": "Return only active products",
            "schema": {
              "type": "boolean",
              "default": true
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of products retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Product"
                      }
                    },
                    "pagination": {
                      "$ref": "#/components/schemas/PaginationInfo"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      },
      "post": {
        "tags": ["Product"],
        "summary": "Create a new product",
        "description": "Create a new product in the catalog.",
        "operationId": "createProduct",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateProductRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Product created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "$ref": "#/components/schemas/Product"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "409": {
            "description": "Conflict - SKU already exists",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/products/{productId}": {
      "get": {
        "tags": ["Product"],
        "summary": "Get product details",
        "description": "Retrieve complete details for a specific product including variants if available.",
        "operationId": "getProduct",
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "required": true,
            "description": "Product ID",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "name": "includeVariants",
            "in": "query",
            "description": "Include product variants in response",
            "schema": {
              "type": "boolean",
              "default": false
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Product retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "$ref": "#/components/schemas/ProductDetail"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      },
      "put": {
        "tags": ["Product"],
        "summary": "Update product",
        "description": "Update an existing product. Note that SKU is immutable.",
        "operationId": "updateProduct",
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "required": true,
            "description": "Product ID",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateProductRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Product updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "$ref": "#/components/schemas/Product"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      },
      "delete": {
        "tags": ["Product"],
        "summary": "Delete product",
        "description": "Delete a product and all its variants. Only allowed if no inventory movements or sales orders exist.",
        "operationId": "deleteProduct",
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "required": true,
            "description": "Product ID",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Product deleted successfully"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "409": {
            "description": "Conflict - Product has active relationships",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
